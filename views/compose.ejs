<%- include('partials/header') -%>
<div class="container-fluid">
  <h1>Compose</h1>

  <form action="/compose" method="post">
    <div class="form-group">
      <label for="postTitle">Title</label>
      <input class="form-control" type="text" name="postTitle" id="postTitle">
    </div>
    <div class="form-group">
      <label for="postText">Post</label>
      <textarea class="form-control" name="postText" id="postText" rows="8" cols="80"></textarea>
    </div>

    <button class="btn btn-success" type="submit" name="button">Publish</button>
  </form>
</div>

<%- include('partials/footer') -%>
